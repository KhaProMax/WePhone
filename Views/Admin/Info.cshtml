@{
    Layout = "../Shared/_AdminLayout.cshtml";
}
@model List<User>

@section Styles {
    <link href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" rel="stylesheet">
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Thông tin người dùng</h1>
</div>

<!-- Placeholder content for each section -->
<div id="productContent">
    <div class="table-title">Danh mục user</div>
    <!-- Table with search and sort functionality -->
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Province/City</th>
                <th>District</th>
                <th>Ward</th>
                <th>Specific Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                        <td>@item.Id</td>
                        <td>@item.Username</td>
                        <td>@item.Password</td>
                        <td>@item.Full_Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone_Number</td>
                        <td>@item.Province_City</td>
                        <td>@item.District</td>
                        <td>@item.Ward</td>
                        <td>@item.Specific_Address</td>
                        
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Province/City</th>
                <th>District</th>
                <th>Ward</th>
                <th>Specific Address</th>
            </tr>
        </tfoot>
    </table>
</div>

